body {
  overflow-y: hidden;
}

.dark-background {
  background-color: #F5F5F5;
}

/*=================================banar=================================*/

.welcome-banner {
  background-size: cover
  background-position: center
  height: calc(100vh - 64px)
  display: flex
}

.welcome-banner h1 {
	font-weight: 600;
	color: black;
	text-transform: uppercase;
}

.welcome-banner h2 {
	margin: 0 0 40px;
	color: black;
	text-transform: uppercase;
}

.welcome-banner h4 {
	font-size: 31px;
	font-weight: 600;
	color: black;
	margin-bottom: 30px;
}
